<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/text_view_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textSize="40sp"
        android:background="#D04242"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/text_view_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:textSize="40sp"
        android:background="#4BD042"
        android:layout_below="@id/text_view_red"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/text_view_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="40sp"
        android:background="#2196F3"
        android:layout_below="@id/text_view_green"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/text_view_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:textSize="40sp"
        android:background="#FF9800"
        android:layout_below="@id/text_view_blue"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/text_view_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray"
        android:textSize="40sp"
        android:background="#C0C0C0"
        android:layout_below="@id/text_view_orange"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/text_view_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:textSize="40sp"
        android:background="#E91E63"
        android:layout_below="@id/text_view_gray"
        android:textColor="#ffff"/>
</RelativeLayout>